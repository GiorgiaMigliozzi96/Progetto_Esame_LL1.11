							<lb n="3" facs="#LL1.11_line_1fv_03"/>
							<addrLine>Monsieur <persName ref="TEI-ListPerson.xml#VF">Vincent Ferliti</persName></addrLine>
							<lb n="4" facs="#LL1.11_line_1fv_04"/>
							<addrLine>à <placeName ref="TEI-ListPlace.xml#CT">Catane</placeName></addrLine>
						</address>
					</ab>
				</div>
				<div type="paratext">
					<ab type="paratext" subtype="addition" hand="#h1" xml:id="LL1.11_hs_1fv_01" facs="#LL1.11_hotspot_1fv_01">	<!-- seconda mano del bibliotecario -->
